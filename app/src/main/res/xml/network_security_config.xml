<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext for local backend development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.11</domain>
        <domain includeSubdomains="true">192.168.163.159</domain>
        <domain includeSubdomains="true">192.168.1.103</domain>
        <domain includeSubdomains="true">192.168.60.142</domain>
        <domain includeSubdomains="true">192.168.100.21</domain>

    </domain-config>
    
    <!-- Allow HTTPS for external services -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">ready.player.me</domain>
        <domain includeSubdomains="true">firebaseapp.com</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
    </domain-config>
</network-security-config>